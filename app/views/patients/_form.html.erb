<div class="signup-form">
<section class="signup-content">
<%= form_with(model: patient) do |form| %>
  <div class="splash-image">
      <%= image_tag "logo.png" , class: "logo-img" %>
  </div>
  <% if patient.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-center">

      <div class="form-group d-flex justify-content-center">
        <div class="d-flex flex-column">

              <%= form.label :date_of_birth, class: "form-label d-flex justify-content-start" %>
              <%= form.date_field :date_of_birth , class: "form-control w-100 form-input" %>
          </div>
      </div>

      <div class="form-group d-flex justify-content-center">
        <div class="d-flex flex-column">

          <%= form.label :first_name, class: "form-label d-flex justify-content-start" %>
          <%= form.text_field :first_name , class: "form-control form-input" %>
          </div>
      </div>

      <div class="form-group d-flex justify-content-center">
          <div class="d-flex flex-column">

            <%= form.label :last_name, class: "form-label d-flex justify-content-start" %>
            <%= form.text_field :last_name , class: "form-control form-input" %>
            </div>
      </div>




      <div class="form-group d-flex justify-content-center">
          <div class="d-flex flex-column">
                <label class="form-label d-flex justify-content-start">National Id Number</label>

                <%= form.number_field :national_id , class: "form-control form-input" %>
            </div>
      </div>





      <div class="form-group d-flex justify-content-center">
          <div class="d-flex flex-column">

                <%= form.label :telephone, class: "form-label d-flex justify-content-start" %>
                <%= form.text_field :telephone , class: "form-control form-input" %>
            </div>
      </div>


      <div class="form-group d-flex justify-content-center">
          <div class="d-flex flex-column">

                <%= form.label :gender, class: "form-label d-flex justify-content-start" %>
                <%= form.select :gender, options_for_select([ "Male", "Female", "Prefer not to say"]), class: "form-control w-100 rounded form-input" %>
            </div>
      </div>
      <div class="form-group d-flex justify-content-center">
          <div class="d-flex flex-column">

                <%= form.label :blood_group, class: "form-label d-flex justify-content-start" %>
                <%= form.select :blood_group, options_for_select([ "A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"]), class: "form-control w-50 form-input" %>
            </div>
      </div>



      <div class="form-group d-flex justify-content-center">
          <div class="d-flex flex-column">

                <%= form.label :image, class: "form-label d-flex justify-content-start" %>
                <%= form.file_field :image , class: "form-control form-input" %>
            </div>
      </div>



      <div>
        <%= form.submit "Add a Patient", class: "btn btn-primary btn-lg form-input" %>
        </div>


<% end %>
</section>
</div>
