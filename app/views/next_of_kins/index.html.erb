  </tr>

<% @next_of_kins.each do |next_of_kin| %>
  <tr>
    <td><%= next_of_kin.name %></td>
    <td><%= next_of_kin.phone_number %></td>
    <td><%= next_of_kin.relation %></td>
    <td><%= next_of_kin.patient %></td>
    <td><%= link_to 'Show', [next_of_kin.patient, next_of_kin] %></td>
    <td><%= link_to 'Edit', edit_patient_next_of_kin_path(next_of_kin.patient, next_of_kin) %></td>
    <td><%= link_to 'Destroy', [next_of_kin.patient, next_of_kin], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

