<div class="container-fluid splash-intro login-page">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>

  <div>
  <div class = "form-group d-flex justify-content-center" >
    <div class="d-flex flex-column"
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
      </div>
  </div>

  <div class = "form-group d-flex justify-content-center" >
  <div class="d-flex flex-column"
    <%= f.label :password %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "password" , class: "form-control" %>
    </div>
</div>


<div class ="d-flex justify-content-between" style="height: 40px">
  <div class="d-flex justify-content-start">
    <%= f.submit "Log in" , class: "btn btn-primary btn-sm px-3 align-self-center" %>
  </div>
<% end %>
<div class="d-flex justify-content-start">
<p class="line"></p> <p class="mt-3 align-self-center">or</p> <p class="line"></p>
</div>
<div class="d-flex justify-content-start">
<%= link_to "Sign up", new_registration_path(resource_name) , class: "btn btn-primary btn-sm align-self-center" %>
</div>
</div>
</div>